{
  "compilerOptions": {
    "target": "ES2018",
    "module": "commonjs",
    "lib": ["ES2018"],
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,               
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "strict": false,
    "esModuleInterop": true,           
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "lib"]
}
