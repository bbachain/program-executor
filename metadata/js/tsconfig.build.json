{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,               
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "strict": false,
    "esModuleInterop": true,           
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "build", "lib"]
}
